/**index.wxss**/

page {
  padding-top: 54rpx;
  background-color: #f6f6f6;
  padding-bottom: 60rpx;
}

.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  margin-bottom: 40rpx;
}

.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 28rpx;
}
.carFindP {
   position: absolute;
   left: 15px;
   padding-top: 15%;
   font-size: 35rpx;
   color: rgb(75, 155, 247);
   font-weight: bold;
   /* border-bottom: 1px solid rgb(75, 155, 247); */
   /* text-align: center; */
}
.pFindCar {
  position: absolute;
  right: 15px;
  /* padding-left: 4%; */
  padding-top: 15%;
  font-size: 35rpx;
  color: rgb(75, 155, 247);
  font-weight: bold;

}
.power {
  margin-top: 30rpx;
  border-radius: 15px;
  background-color: white;
  width: 94%;
  padding-bottom: 15rpx;
}

.power_info {
  display: flex;
  padding: 30rpx 25rpx;
  align-items: center;
  justify-content: space-between;
}

.power_info_more {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(90deg);
}

.power_info_less {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(270deg);
}

.power_info_text {
  display: flex;
  flex-direction: column;
}

.power_info_text_title {
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 30rpx;
}

.power_info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
}
.power_driver_phone {
  color: rgba(0, 0, 0, 0.4);
  font-size: 28rpx;
  font-weight: bold;
  padding-left: 2%;
}


.power_item {
  padding: 30rpx 25rpx;
  display: flex;
  /* justify-content: space-between; */
}

.power_item_title {
  /* margin: 0 0 0 auto; */
  float: right;
  padding-right: 5%;
  font-size: 35rpx;
  color: red;
}
.power_driver {
  text-align: left;
  margin: auto 0 ;
  float: right;
  font-size: 25rpx;
  color: black;
  font-weight: bold;
}

.power_item_icon {
  width: 30rpx;
  height: 30rpx;
}

.line {
  width: 95%;
  margin: 0 auto;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.lineOne {
  width: 100%;
  float: left;
  /* margin: 0 auto; */
  height: 5rpx;
  background-color: rgb(75, 155, 247);
}

.environment {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  margin-top: 25%;
}